{
  "name": "Nepal",
  "version": "0.0.1",
  "private": true,
  "dependencies": {
    "express": "^4.15.4",
    "forever": "^0.15.3",
    "request": "^2.81.0"
  },
  "scripts": {
    "start": "forever lib/server.js",
    "start-dev": "npm run prepare && node lib/server.js",
    "prepare": "npm run clean && npm run compile-src && npm run copy && npm run webpack",
    "build": "NODE_ENV=production npm run prepare && docker build -t sundar-nepal .",
    "clean": "npm run clean-lib && npm run clean-public",
    "compile-src": "babel src --out-dir lib",
    "clean-lib": "rm -r ./lib || true",
    "copy-images": "cp -r assets/img/ public/img",
    "copy-css": "cp -r assets/css/ public/css",
    "copy-html": "cp assets/index.html public/index.html",
    "copy": "npm run copy-css && npm run copy-html && npm run copy-images",
    "webpack": "webpack",
    "clean-public": "(rm -r ./public || true) && mkdir public"
  },
  "babel": {
    "plugins": [
      "transform-es2015-modules-commonjs"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-syntax-jsx": "^6.18.0",
    "babel-plugin-syntax-object-rest-spread": "^6.13.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "webpack": "^3.6.0",
    "whatwg-fetch": "^2.0.3"
  }
}
